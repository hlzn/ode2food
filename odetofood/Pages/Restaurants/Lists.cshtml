@page
@model odetofood.Pages.Restaurants.ListsModel
@{
}
<h1>Test lists</h1>

@Model.HelloMessage

<br>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" asp-for="SearchTerm" class="form-control" name="searchTerm">
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<hr>
<br>

<table class="table">
    @foreach (var restaurant in Model.MyRestaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a  asp-page="./Detail"
                    asp-route-restaurantId="@restaurant.Id" 
                    class="btn btn-lg">
                    <i class="glyphicon glyphicon-zoom-in"></i>    
                </a>
            </td>
            <td>
                <a  asp-page="./Edit"
                    asp-route-restaurantId="@restaurant.Id" 
                    class="btn btn-lg">
                    <i class="glyphicon glyphicon-edit"></i>    
                </a>
            </td>
        </tr>
    }
</table>

<hr>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

